{
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "python.sortImports": true
    },
    "python.linting.flake8Args": [
        "--max-line-length=110",
        "--ignore=F401,E402,E203"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "110"
    ],
    "appService.defaultWebAppToDeploy": "/subscriptions/9e7a7226-c40b-4304-9aef-231dbd493e34/resourceGroups/quizbot/subscriptions/9e7a7226-c40b-4304-9aef-231dbd493e34/resourceGroups/quizbot/providers/Microsoft.Web/sites/bm-quizbot",
    "appService.deploySubpath": "."
}
